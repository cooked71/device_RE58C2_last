<compatibility-matrix version="5.0" type="framework">
    <!-- Required/optional HALs -->
    <hal format="aidl" optional="true">
        <name>android.hardware.sensors</name>
        <interface>
            <name>ISensors</name>
            <instance>default</instance>
        </interface>
    </hal>
    <hal format="hidl">
        <name>android.hardware.cas</name>
        <version>1.0</version>
        <interface>
            <name>IMediaCasService</name>
            <instance>default</instance>
        </interface>
    </hal>

    <hal format="hidl">
        <name>android.hardware.nfc</name>
        <version>1.2</version>
        <interface>
            <name>INfc</name>
            <instance>default</instance>
        </interface>
    </hal>

    <!-- Vendor optional HALs -->
    <hal format="hidl" optional="true">
        <name>vendor.nxp.nxpnfc</name>
        <version>2.0</version>
        <interface>
            <name>INxpNfc</name>
            <instance>default</instance>
        </interface>
    </hal>

    <hal format="hidl" optional="true">
        <name>vendor.nxp.nxpnfclegacy</name>
        <version>1.0</version>
        <interface>
            <name>INxpNfcLegacy</name>
            <instance>default</instance>
        </interface>
    </hal>

    <hal format="hidl" optional="true">
        <name>vendor.oppo.engnative.engineer</name>
        <version>1.0</version>
        <interface>
            <name>IEngineer</name>
            <instance>default</instance>
        </interface>
    </hal>

    <hal format="hidl" optional="true">
        <name>vendor.sprd.hardware.connmgr</name>
        <version>1.0</version>
        <interface>
            <name>IConnmgr</name>
            <instance>default</instance>
        </interface>
    </hal>

    <hal format="aidl" optional="true">
        <name>vendor.sprd.hardware.enhance</name>
        <interface>
            <name>IEnhance</name>
            <instance>default</instance>
        </interface>
    </hal>

    <hal format="hidl" optional="true">
        <name>vendor.sprd.hardware.network</name>
        <version>1.0</version>
        <interface>
            <name>INetworkControl</name>
            <instance>default</instance>
        </interface>
    </hal>

    <hal format="hidl" optional="true">
        <name>vendor.sprd.hardware.wcn</name>
        <version>1.0</version>
        <interface>
            <name>IWcnVendorInterface</name>
            <instance>default</instance>
        </interface>
    </hal>

    <!-- System SDK levels -->
    <system-sdk>
        <version>28</version>
        <version>29</version>
        <version>30</version>
        <version>31</version>
        <version>32</version>
        <version>33</version>
    </system-sdk>

    <!-- REMOVE THE <sepolicy> AND <avb> SECTIONS ENTIRELY -->
    <!-- These are not allowed in framework matrices -->
</compatibility-matrix>