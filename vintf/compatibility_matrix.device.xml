<?xml version="1.0" encoding="UTF-8"?>
<compatibility-matrix version="5.0" type="device">
    
    <!-- Convert each HAL from manifest to matrix format -->
    <hal format="hidl" optional="false">
        <name>android.hardware.audio</name>
        <version>7.1</version>
        <interface>
            <name>IDevicesFactory</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.audio.effect</name>
        <version>7.0</version>
        <interface>
            <name>IEffectsFactory</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.bluetooth</name>
        <version>1.1</version>
        <interface>
            <name>IBluetoothHci</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.boot</name>
        <version>1.2</version>
        <interface>
            <name>IBootControl</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.broadcastradio</name>
        <version>2.0</version>
        <interface>
            <name>IBroadcastRadio</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.camera.provider</name>
        <version>2.4</version>
        <interface>
            <name>ICameraProvider</name>
            <instance>legacy/0</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.gnss</name>
        <version>2.1</version> <!-- Keep only the highest version -->
        <interface>
            <name>IGnss</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.graphics.allocator</name>
        <version>4.0</version>
        <interface>
            <name>IAllocator</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.graphics.composer</name>
        <version>2.4</version>
        <interface>
            <name>IComposer</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.graphics.mapper</name>
        <version>4.0</version>
        <interface>
            <name>IMapper</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.media.omx</name>
        <version>1.0</version>
        <interface>
            <name>IOmx</name>
            <instance>default</instance>
        </interface>
        <interface>
            <name>IOmxStore</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.neuralnetworks</name>
        <version>1.3</version>
        <interface>
            <name>IDevice</name>
            <instance>armnn-gpu</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="false">
        <name>android.hardware.renderscript</name>
        <version>1.0</version>
        <interface>
            <name>IDevice</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="true">
        <name>vendor.oppo.engnative.engineer</name>
        <version>1.0</version>
        <interface>
            <name>IEngineer</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="true">
        <name>vendor.sprd.hardware.connmgr</name>
        <version>1.0</version>
        <interface>
            <name>IConnmgr</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="aidl" optional="true">
        <name>vendor.sprd.hardware.enhance</name>
        <interface>
            <name>IEnhance</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="true">
        <name>vendor.sprd.hardware.network</name>
        <version>1.0</version>
        <interface>
            <name>INetworkControl</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <hal format="hidl" optional="true">
        <name>vendor.sprd.hardware.wcn</name>
        <version>1.0</version>
        <interface>
            <name>IWcnVendorInterface</name>
            <instance>default</instance>
        </interface>
    </hal>
    
    <!-- Kernel requirements -->
    <kernel version="5.4"/>
    
    <!-- SDK level -->
    <vendor-ndk>
        <version>33</version>
    </vendor-ndk>
    
</compatibility-matrix>